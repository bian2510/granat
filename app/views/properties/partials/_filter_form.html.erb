  <div class="col-md-2 col-sm-12 filter-container">
    <div class="accordion" id="accordionExample">
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingOne">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
            Filtros
          </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
          <div class="accordion-body">
            <%= form_with url: "/properties/filter", method: :get do |form| %>
              <div class="mb-3">
                <%= form.label :kind, "Tipo de inmueble:", class: "form-label" %>
                <%= form.select :kind, options_for_select(kind), {}, class: "form-select" %>
              </div>
              <div class="mb-3">
                <%= form.label :operation, "Operacion:", class: "form-label" %>
                <%= form.select :operation, options_for_select(operations), {}, class: "form-select" %>
              </div>
<%#               <div class="mb-3"> %>
<%#                 <%= form.label :province, "Canton/Provincia:", class: "form-label" %>
<%#                 <%= form.select :province, options_for_select(provinces), {}, class: "form-select" %>
<%#               </div>
              <div class="mb-3"> %>
<%#                 <%= form.label :city, "Ciudad:", class: "form-label" %>
<%#                 <%= form.text_field :city, class: "form-control"%>
<%#               </div>
              <div class="mb-3"> %>
<%#                 <%= form.label :municipality, "Municipalidad:", class: "form-label" %>
<%#                 <%= form.select :municipality, options_for_select(neighboords[:caba]), {}, class: "form-select" %>
<%#               </div> %>
              <div class="mb-3">
                <%= form.label :neighborhood, "Barrio:", class: "form-label" %>
                <%= form.select :neighborhood, options_for_select(neighboords[:caba]), {}, class: "form-select" %>
              </div>
              <div class="mb-3">
                <%= form.label :main_street, "Calle:", class: "form-label" %>
                <%= form.text_field :main_street, class: "form-control"%>
              </div>
              <div class="mb-3">
                <div class='row'>
                  <%= form.label :price, "Precio:", class: "form-label" %>
                  <div class='w-50'>
                    <%= form.text_field :from_price, class: "form-control", placeholder: 'Desde'%>
                  </div> 
                  <div class='w-50'>
                    <%= form.text_field :to_price, class: "form-control", placeholder: 'Hasta'%>
                  </div>
                </div>  
              </div>
              <div class="mb-3">
              </div>
              <div class="mb-3">
                <div class='row'>
                  <%= form.label :price, "Area:", class: "form-label" %>
                  <div class='w-50'>
                    <%= form.text_field :from_total_area, class: "form-control", placeholder: 'Desde'%>
                  </div>
                  <div class='w-50'>
                    <%= form.text_field :to_total_area, class: "form-control", placeholder: 'Hasta'%>
                  </div>
                </div>
              </div>
              <div class="mb-3">
                <%= form.label :year_old, "Años de antiguedad:", class: "form-label" %>
                <%= form.text_field :year_old, class: "form-control"%>
              </div>
              <div class="mb-3">
                <%= form.label "Cuartos:", class: "form-label" %>
                <div>
                  <%= form.check_box :one_room, class: "form-check-input"%>
                  <%= label_tag :rooms, "1", class: 'me-2' %>
                  <%= form.check_box :two_rooms, class: "form-check-input"%>
                  <%= label_tag :rooms, "2", class: 'me-2' %>
                  <%= form.check_box :three_rooms, class: "form-check-input"%>
                  <%= label_tag :rooms, "3", class: 'me-2' %>
                  <%= form.check_box :four_rooms, class: "form-check-input"%>
                  <%= label_tag :rooms, "4+", class: 'me-2' %>
                </div>
              </div>
              <div class="mb-3">
                <%= form.label "Baños:", class: "form-label" %>
                <div>
                  <%= form.check_box :one_bathroom, class: "form-check-input"%>
                  <%= label_tag :bathrooms, "1", class: 'me-2' %>
                  <%= form.check_box :two_bathrooms, class: "form-check-input"%>
                  <%= label_tag :bathrooms, "2", class: 'me-2' %>
                  <%= form.check_box :three_bathrooms, class: "form-check-input"%>
                  <%= label_tag :bathrooms, "3+", class: 'me-2' %>
                </div>
              </div>
              <div class="mb-3">
                <%= form.label "Estacionamientos:", class: "form-label" %>
                <div>
                  <%= form.check_box :one_parking, class: "form-check-input"%>
                  <%= label_tag :parking, "1", class: 'me-2' %>
                  <%= form.check_box :two_parking, class: "form-check-input"%>
                  <%= label_tag :parking, "2", class: 'me-2' %>
                  <%= form.check_box :three_parking, class: "form-check-input"%>
                  <%= label_tag :parking, "3+", class: 'me-2' %>
                </div>
              </div>
              <div class="mb-3">
                <%= form.label "Bauleras:", class: "form-label" %>
                <div>
                  <%= form.check_box :one_trunk, class: "form-check-input"%>
                  <%= label_tag :trunk, "1", class: 'me-2' %>
                  <%= form.check_box :two_trunk, class: "form-check-input"%>
                  <%= label_tag :trunk, "2+", class: 'me-2' %>
                </div>
              </div>
              <p>Amenities:</p>
              <div class="mb-3 form-check">
                <%= form.label :bbq, "BBQ:", class: "form-check-label" %>
                <%= form.check_box :bbq, class: "form-check-input"%>
              </div>
              <div class="mb-3 form-check">
                <%= form.label :sport_zones, "Zona de deportes:", class: "form-check-label" %>
                <%= form.check_box :sport_zones, class: "form-check-input"%>
              </div>
              <div class="mb-3 form-check">
                <%= form.label :gym, "Gym:", class: "form-check-label" %>
                <%= form.check_box :gym, class: "form-check-input"%>
              </div>
              <div class="mb-3 form-check">
                <%= form.label :pool, "Piscina:", class: "form-check-label" %>
                <%= form.check_box :pool, class: "form-check-input"%>
              </div>
              <%= form.hidden_field :page , value: 1 %>
              <%= form.submit "Aplicar", class: "btn btn-dark" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
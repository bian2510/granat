
<div id="carouselExampleControls" class="carousel slide">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag(property.property_image.photo_1, class: "card-img-top d-block w-100") if property.property_image.photo_1.attached? %>
    </div>
    <div class="carousel-item">
      <%= image_tag(property.property_image.photo_2, class: "card-img-top d-block w-100") if property.property_image.photo_2.attached? %>
    </div>
    <div class="carousel-item">
      <%= image_tag(property.property_image.photo_3, class: "card-img-top d-block w-100") if property.property_image.photo_3.attached? %>
    </div>
    <div class="carousel-item">
      <%= image_tag(property.property_image.photo_4, class: "card-img-top d-block w-100") if property.property_image.photo_4.attached? %>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
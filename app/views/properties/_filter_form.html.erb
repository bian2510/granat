  <div class="col-md-2 col-sm-12 filter-container">
    <div class="accordion" id="accordionExample">
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingOne">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
            Filtros
          </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
          <div class="accordion-body">
            <%= form_with url: "/properties/filter", method: :get do |form| %>
              <div class="mb-3">
                <%= form.label :province, "Canton/Provincia:", class: "form-label" %>
                <%= form.text_field :province, class: "form-control"%>
              </div>
              <div class="mb-3">
                <%= form.label :city, "Ciudad:", class: "form-label" %>
                <%= form.text_field :city, class: "form-control"%>
              </div>
              <div class="mb-3">
                <%= form.label :municipality, "Municipio:", class: "form-label" %>
                <%= form.text_field :municipality, class: "form-control"%>
              </div>
              <div class="mb-3">
                <%= form.label :main_street, "Calle:", class: "form-label" %>
                <%= form.text_field :main_street, class: "form-control"%>
              </div>
              <div class="mb-3">
                <%= form.label :kind, "Tipo de inmueble:", class: "form-label" %>
                <%= form.text_field :kind, class: "form-control"%>
              </div>
              <div class="mb-3">
                <%= form.label :operation, "Operacion:", class: "form-label" %>
                <%= form.text_field :operation, class: "form-control"%>
              </div>
              <div class="mb-3">
                <%= form.label :price, "Precio desde:", class: "form-label" %>
                <%= form.text_field :price, class: "form-control"%>
              </div>
              <div class="mb-3">
                <%= form.label :price, "Precio hasta:", class: "form-label" %>
                <%= form.text_field :price, class: "form-control"%>
              </div>
              <div class="mb-3">
                <%= form.label :total_area, "Area desde:", class: "form-label" %>
                <%= form.text_field :total_area, class: "form-control"%>
              </div>
              <div class="mb-3">
                <%= form.label :total_area, "Area hasta:", class: "form-label" %>
                <%= form.text_field :total_area, class: "form-control"%>
              </div>
              <div class="mb-3">
                <%= form.label :year_old, "Años de antiguedad:", class: "form-label" %>
                <%= form.text_field :year_old, class: "form-control"%>
              </div>
              <div class="mb-3">
                <%= form.label :rooms, "Cuartos:", class: "form-label" %>
                <%= form.text_field :rooms, class: "form-control"%>
              </div>
              <div class="mb-3">
                <%= form.label :bathrooms, "Baños:", class: "form-label" %>
                <%= form.text_field :bathrooms, class: "form-control"%>
              </div>
              <div class="mb-3">
                <%= form.label :parking, "Estacionamiento:", class: "form-label" %>
                <%= form.text_field :parking, class: "form-control"%>
              </div>
              <div class="mb-3">
                <%= form.label :trunk, "Baulera:", class: "form-label" %>
                <%= form.text_field :trunk, class: "form-control"%>
              </div>
              <div class="mb-3 form-check">
                <%= form.label :bbq, "BBQ:", class: "form-check-label" %>
                <%= form.check_box :bbq, class: "form-check-input"%>
              </div>
              <div class="mb-3 form-check">
                <%= form.label :sport_zones, "Zona de deportes:", class: "form-check-label" %>
                <%= form.check_box :sport_zones, class: "form-check-input"%>
              </div>
              <div class="mb-3 form-check">
                <%= form.label :gym, "Gym:", class: "form-check-label" %>
                <%= form.check_box :gym, class: "form-check-input"%>
              </div>
              <div class="mb-3 form-check">
                <%= form.label :pool, "Piscina:", class: "form-check-label" %>
                <%= form.check_box :pool, class: "form-check-input"%>
              </div>
              <%= form.submit "Aplicar", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<p id="notice"><%= notice %></p>

<h1>Amenities</h1>

<table>
  <thead>
    <tr>
      <th>Bbq</th>
      <th>Sport zones</th>
      <th>Gym</th>
      <th>Pool</th>
      <th>Comunal room</th>
      <th>Property</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @amenities.each do |amenity| %>
      <tr>
        <td><%= amenity.bbq %></td>
        <td><%= amenity.sport_zones %></td>
        <td><%= amenity.gym %></td>
        <td><%= amenity.pool %></td>
        <td><%= amenity.comunal_room %></td>
        <td><%= amenity.property_id %></td>
        <td><%= link_to 'Show', amenity %></td>
        <td><%= link_to 'Edit', edit_amenity_path(amenity) %></td>
        <td><%= link_to 'Destroy', amenity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


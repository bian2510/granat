<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Province</th>
      <th>City</th>
      <th>Municipality</th>
      <th>Main street</th>
      <th>Secondary street</th>
      <th>Property</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.province %></td>
        <td><%= address.city %></td>
        <td><%= address.municipality %></td>
        <td><%= address.main_street %></td>
        <td><%= address.secondary_street %></td>
        <td><%= address.property_id %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

